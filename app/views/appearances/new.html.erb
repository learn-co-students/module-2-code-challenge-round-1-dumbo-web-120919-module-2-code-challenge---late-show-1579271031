<h1>Create a New Appearance!</h1>

<% if flash[:errors] %>
  <% flash[:errors].each do |error| %>
    <h3><%= error %></h3>
  <% end %>
<% end %>

<%= form_for @appearance do |f| %>

  <%= f.label :guest_id, 'Select a Guest!' %> <br/>
  <%= f.collection_select :guest_id, @guests, :id, :name %>
  
  <br/><br/>

  <%= f.label :episode_id, 'Select an Episode! '%> <br/>
  <%= f.collection_select :episode_id, @episodes, :id, :number %>

  <br/><br/>

  <%= f.label :rating, 'Enter a rating for this appearance, between 1 and 5:'%> <br/>
  <%= f.number_field :rating %>

  <br/><br/>

  <%= f.submit %>

<% end %>