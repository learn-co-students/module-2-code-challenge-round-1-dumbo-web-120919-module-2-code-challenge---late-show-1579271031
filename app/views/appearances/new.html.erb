<h1>Create New Appearance</h1>

<%if flash[:errors]%>
<%flash[:errors].each do |message|%>
<%=message%>
<%end%>
<%end%>

<%=form_for @appearance do |f|%>
<%=f.label "Select a Guest"%>
<%=f.collection_select :guest_id, @guests, :id, :name%>
<br/>
<%=f.label "Select an Episode"%>
<%=f.collection_select :episode_id, @episodes, :id, :number%>
<br/>
<%=f.label "Rate this Episode"%>
<%=f.number_field :rating%>
<br/>
<%=f.submit "Create New Appearance"%>
<%end%>
