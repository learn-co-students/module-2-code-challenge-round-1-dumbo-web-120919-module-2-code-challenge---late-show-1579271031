<h1>New Appearance</h1>

<h2><%= form_for @appearance do |f|%></h2>
        <%= f.label "Guest"%>
        <%= f.collection_select :guest_id, @guests, :id, :name %>

        <%= f.label "Episode"%>
        <%= f.collection_select :episode_id, @episodes, :id, :date %>

        <%= f.label :rating%>
        <%= f.number_field :rating%>

        <%=f.submit%>
    <%end%>


<p><%= @appearance.errors.full_messages.first if @appearance.errors.any? %></p>
