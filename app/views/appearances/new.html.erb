<h1>New Appearance Form</h1>

<% if flash[:errors] %>
    <% flash[:errors].each do |msg| %>
        <p style="color:red"><%= msg %></p>
    <% end %>
<% end %>

<%= form_for @appearance do |f| %>
    <%= f.label 'Select a Guest:'%>
    <%= f.collection_select :guest_id, @guests, :id, :name %>
    <br>

    <%= f.label 'Select an Episode Number:'%>
    <%= f.collection_select :episode_id, @episodes, :id, :number %>
    <br>

    <%= f.label 'Enter Rating:'%>
    <%= f.number_field :rating %>

    <%= f.submit %>

<% end %>