<h1>New Appearance</h1>
<%if flash[:errors]%>
    <%flash[:errors].each do |error|%>
        <font color="red"><strong>
            <%=error%>
        </font></strong><br/>
    <%end%>
<%end%>


    <%=form_for @appearance do |f|%>
        <%=f.label :guest_id, "Guest"%><br/>
        <%=f.collection_select :guest_id, @guests, :id, :name%><br/>
        <%=f.label :episode_id, "Episode"%><br/>
        <%=f.collection_select :episode_id, @episodes, :id, :date%><br/>
        <%=f.label :rating, "Rating"%><br/>
        <%=f.number_field :rating%><br/>

        <%=f.submit%>
    <%end%>
