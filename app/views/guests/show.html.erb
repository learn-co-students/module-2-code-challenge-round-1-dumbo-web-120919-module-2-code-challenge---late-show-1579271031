<h1>Guest Info</h1>

<h3><label>Guest Name:</label></h3>
<%= @guest.name %>

<br/>

<h3><label>Guest Occupation:</label></h3>
<%= @guest.occupation %>

<br/>


<h3><label>Episodes this Guest has appeared on:</label></h3>
<ul>
  <% @guest.episodes.each do |ep| %>
  <li>
    <%= link_to ep.date.strftime("%B %d, %Y"), episode_path(ep) %>
  </li>
  <% end%>
</ul>